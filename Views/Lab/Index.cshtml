@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado.</p>
}
else
{
    <table class="table">
        <thead> 
            <tr> 
                <th>Id</th>
                <th>Número</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td> 
                        <a class="btn btn-primary btn-sm" href="/Lab/Show/@lab.Id">Ver</a>
                        <a class="btn btn-primary btn-sm" href="/Lab/Update/@lab.Id">Editar</a>
                        <a class="btn btn-primary btn-sm" href="/Lab/Delete/@lab.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}