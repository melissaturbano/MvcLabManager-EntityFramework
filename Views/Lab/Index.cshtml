@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado.</p>
    <a class="btn btn-outline-success" asp-controller="Lab" asp-action="Create">Adicionar</a>
}
else
{
    <table class="table">
        <thead> 
            <tr> 
                <th>Id</th>
                <th>Número</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td> 
                        <a class="btn btn-outline-primary" asp-controller="Lab" asp-action="Show" asp-route-id="@lab.Id">Ver</a> 
                        <a class="btn btn-outline-danger" asp-controller="Lab" asp-action="Delete" asp-route-id="@lab.Id">Deletar</a>
                        <a class="btn btn-outline-warning" asp-controller="Lab" asp-action="Update" asp-route-id="@lab.Id">Atualizar</a>                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-success" asp-controller="Lab" asp-action="Create">Adicionar</a>
}