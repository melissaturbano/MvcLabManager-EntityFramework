@model MvcLabManager.Models.Computer

@{
    ViewData["Title"] = "Cadastrar Computador";
}
<h1>@ViewData["Title"]</h1>

<p>Utilize o formul√°rio abaixo para cadastrar um novo computador!</p>

    <form method="post">
        <p>
            <label for="id"><strong>Id:</strong></label>
            <input type="text" name="id" id="id">
            <span asp-validation-for="Id" class="text-danger" ></span>
        </p>
        <p>
            <label for="ram"><strong>RAM: </strong></label>
            <input type="text" name="ram" id="ram">
            <span asp-validation-for="Ram" class="text-danger" ></span>
        </p>
          <p>
            <label for="processor"><strong>Processador: </strong></label>
            <input type="text" name="processor" id="processor">
            <span asp-validation-for="Processor" class="text-danger" ></span>
        </p>

        <button asp-controller="Computer" asp-action="Create" class="btn btn-outline-success">Cadastrar</button>
    </form>